{
  "manifest_version": 3,
  "name": "Playwright Journey Recorder",
  "version": "1.0",
  "description": "Record user journeys for Playwright tests.",
  "permissions": [
    "storage",
    "scripting",
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.chrome/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Playwright Journey Recorder"
  },
  "side_panel": {
    "default_path": "recorder.html"
  }
}
